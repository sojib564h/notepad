<body>
    <h1>My Online Notepad</h1> <!-- Page title visible -->
    <textarea id="note" placeholder="Lekha suru korun..."></textarea>
    <div class="buttons">
        <button onclick="saveNote()">Save Note</button>
        <button onclick="clearNote()">Clear Note</button>
    </div>

    <script>
        const noteArea = document.getElementById('note');

        // LocalStorage theke note load kora
        if (localStorage.getItem('myNote')) {
            noteArea.value = localStorage.getItem('myNote');
        }

        function saveNote() {
            localStorage.setItem('myNote', noteArea.value);
            alert('Note save hoye gelo!');
        }

        function clearNote() {
            if(confirm("Are you sure you want to clear the note?")) {
                noteArea.value = '';
                localStorage.removeItem('myNote');
            }
        }
    </script>
</body>
